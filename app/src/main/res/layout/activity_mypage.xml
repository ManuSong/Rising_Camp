<?xml version="1.0" encoding="utf-8"?>


<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22171010"
    tools:context=".MypageActivity">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="My배민"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/bmhannapro"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/shape_line"/>

        <ImageView
            android:id="@+id/back_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:src="@drawable/left_arrow"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:background="@color/white"/>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/shape_line">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line">

                    <ImageView
                        android:id="@+id/my_image"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bm_myicon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/my_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="더귀한분,"
                        android:textColor="@color/grey_dark"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@+id/my_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/my_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="별명없음"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintStart_toEndOf="@+id/my_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center|right"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line">

                    <ImageView
                        android:id="@+id/my_class_img"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bm_my_class"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/circle_bg"
                        android:gravity="center"
                        android:text="등급별혜택"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/bmhannapro"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_line">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_point_img"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="20dp"
                            android:src="@drawable/my_page_poin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_point_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="포인트"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_point_cupon"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="25dp"
                            android:paddingLeft="15dp"
                            android:src="@drawable/my_page_cupon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_point_cupon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="쿠폰함"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_page_present"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="35dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/my_page_present" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_page_present"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="선물함"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_line">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_page_heart"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="30dp"
                            android:src="@drawable/my_page_heart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_page_heart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="찜"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_page_order"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="25dp"
                            android:src="@drawable/my_page_order_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_page_order"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="주문내역"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/shape_line">

                        <ImageView
                            android:id="@+id/my_page_review"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:scaleType="centerCrop"
                            android:paddingTop="25dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/my_page_review_manage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/my_page_review"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_centerInParent="true"
                            android:text="리뷰관리"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.appcompat.widget.LinearLayoutCompat>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/my_page_adjpg"/>





            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:src="@drawable/bm_green"
                        android:paddingRight="150dp"
                        android:paddingTop="20dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:gravity="left|center"
                        android:text="함께해요!"
                        android:layout_marginLeft="17dp"
                        android:textColor="#79090909"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center"
                        android:src="@drawable/right_arrow"/>



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_line">

                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:src="@drawable/bm_pay"
                        android:paddingRight="160dp"
                        android:paddingTop="40dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:gravity="left|center"
                        android:text="배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!"
                        android:layout_marginLeft="17dp"
                        android:textColor="#79090909"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center"
                        android:src="@drawable/right_arrow"/>



                </FrameLayout>




            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="가족계정 관리"
                        android:textSize="18dp"
                        android:gravity="center|left|bottom"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:text="결제수단을 공유해 우리 가족의 끼니를 챙겨주세요."
                        android:textSize="13dp"
                        android:textColor="@color/grey_dark"
                        android:layout_gravity="bottom"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="배민커넥트 지원"
                        android:textSize="18dp"
                        android:gravity="center|left|bottom"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:text="직접 배달하고 수입을 만들어보세요!"
                        android:textSize="13dp"
                        android:textColor="@color/grey_dark"
                        android:layout_gravity="bottom"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="공지사항"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="이벤트"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="고객센터"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="환경설정"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="약관 및 정책"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="현재 버전 11.22.0"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="right|center"/>



                </FrameLayout>






            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Copyright Woowa Brothers in Song-pa. All Right Reserved."
                android:gravity="center"
                android:textSize="13dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>




    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>